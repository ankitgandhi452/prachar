<div id="media-container">
	<h2 class="page-header"><%= @media.title %></h2>
	<div class="row no-margin">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding">
			<div id="header-image" class="img-protected">
				<img src="<%= @media_images[0] rescue nil %>" />
				<div class="img-protector"></div>
			</div>
		</div>
	</div>
	<div id="content"><%= @media.content %></div>
	<h3 class="text-center sub-header">Meet The Team</h3>
	<div id="team-member-container" class="row no-margin">
		<% @team_members.each do |member| %>
			<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center team-member">
				<div class="name"><%= member.name %></div>
				<div class="designation"><%= member.designation %></div>
			</div>
		<% end %>
	</div>

</div>

